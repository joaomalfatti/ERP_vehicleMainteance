generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vehicle {
  id_Vehicle      String             @id @default(uuid())
  plate           String             @unique
  mark            String
  model           String
  year            String
  type            VehicleTypeEnums
  chassis         String
  status          VehicleStatusEnums
  dateAcquisition DateTime
  updateAt        DateTime           @updatedAt

  @@map("tbl_vehicle")
}

enum VehicleTypeEnums {
  CART
  TRUCK
  TOCO
}

enum VehicleStatusEnums {
  ACTIVE
  INACTIVE
  MAINTENANCE
}
