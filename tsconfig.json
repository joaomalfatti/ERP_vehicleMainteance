{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "22.0.0",

  "compilerOptions": {
    "lib": ["es2023"],
    "types": ["node", "vitest"],
    "module": "nodenext",
    "target": "es2022",
    "noImplicitAny": false,
    "baseUrl": "./src",
    "paths": {
      "@infra/*": ["infra/*"],
      "@usecases/*": ["usecases/*"],
      "@domain/*": ["domain/*"]
    },

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  }
}