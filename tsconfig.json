{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "22.0.0",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "nodenext",
    "target": "es2022",
    "baseUrl": "./src",
    "paths": {
      "@infra/*": ["./src/infra/*"],
      "@usecases/*": ["./src/usecases/*"],
      "@domain/*": ["./src/domain/*"]
    },

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  }
}